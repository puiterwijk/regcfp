{
  "development": {
    "site_url": "http://localhost:3000",

    "theming": {
      "theme": "gnome",
      "site_name": "TEST GUADEC 2017 registration",
      "event_name": "GUADEC 2017",
      "event_location": "Manchester, England",
      "logo": ""
    },
    "secret": "development",
    "database": {
      "database": "database.sqlite",
      "dialect": "sqlite",
      "storage": "database.sqlite",
      "define": {
        "paranoid": true
      }
    },

    "email": {
      "from": "\"GUADEC 2017 registration\" <registration@guadec.org>",
      "transport": {
        "host": "localhost",
        "port": 25
      }
    },

    "listen": {
      "http": {
        "enabled": true,
        "listenip": "127.0.0.1",
        "port": 3000
      },
      "https": {
        "enabled": false,
        "only": true,
        "url": "https://localhost:3001",
        "listenip": "127.0.0.1",
        "port": 3001,
        "cert": "certificate.crt",
        "ca": "intermediate.crt",
        "key": "certificate.key"
      }
    },

    "auth": {
      "module": "openid"
    },

    "permissions": {
      "admin": ["admin@regcfp"],
      "papers": {
        "submit": ["*authenticated*"],
        "list": {
          "accepted": ["*anonymous*"],
          "own": ["*authenticated*"],
          "all": ["admin@regcfp", "voter@regcfp"]
        },
        "edit": {
          "own": ["*authenticated*"],
          "all": ["admin@regcfp"]
        },
        "delete": {
          "own": ["*authenticated*"],
          "all": ["admin@regcfp"]
        },
        "tag": ["*authenticated*"],
        "vote": ["admin@regcfp", "voter@regcfp"],
        "showvotes": ["admin@regcfp"],
        "accept": ["admin@regcfp"]
      },
      "registration": {
        "register": ["*authenticated*"],
        "pay": ["*authenticated*"],
        "request_receipt": ["*authenticated*"],
        "view_public": ["*authenticated*"],
        "view_all": ["admin@regcfp", "payadm@regcfp"],
        "view_payment": ["payadm@regcfp"],
        "add_payment": ["admin@regcfp", "desk@regcfp"],
        "print_badge": ["admin@regcfp", "desk@regcfp"],
        "desk": ["admin@regcfp", "desk@regcfp"]
      }
    },

    "papers": {
      "enabled": true,
      "tracks": [
        "25 minutes",
        "40 minutes"
      ]
    },

    "registration": {
      "enabled": true,
      "fields": {
        "ircnick": {
          "display_name": "Chat Nickname",
          "short_display_name": "Nick",
          "type": "string",
          "required": false,
          "private": true,
          "placeholder": "Chat Nickname",
          "message": "Nickname used in online chat networks like IRC. It will be printed on your badge beneath your name."
        },
        "volunteer": {
          "display_name": "I'm interested in helping out",
          "short_display_name": "Volunteer",
          "type": "boolean",
          "required": false,
          "message" : [
            "GUADEC can't happen without help from volunteers. Choose ",
            "if you would like to receive details."
          ],
          "private": true
        },
        "header-accommodation": {
          "type": "documentation",
          "display_name": "",
          "html" : [
            "<p>Rooms are available in 12-bedroom houses at the conference ",
            "venue (see ",
            "<a href=\"http://www.guadec.org/accommodation/\">the GUADEC website</a> ",
            "for more details). These are available on a first come first ",
            "serve basis and cost £43 per night"
         ]
        },
        "accommodation": {
          "display_name": "Room booking",
          "short_display_name": "Room",
          "type": "purchase",
          "required": false,
          "private": true,
          "options": {
            "thu27-sun30": {
              "display_name": "Thu 27th Jul - Mon 31st Jul (4 nights)",
              "cost": 172,
              "limit": 12
            },
            "thu27-tue1": {
              "display_name": "Thu 27th Jul - Wed 2nd Aug (6 nights)",
              "cost": 258,
              "limit": 12
            },
            "thu27-wed2": {
              "display_name": "Thu 27th Jul - Thu 3rd Aug (7 nights)",
              "cost": 301,
              "limit": 12
            },
            "fri28-sun30": {
              "display_name": "Fri 28th Jul - Mon 31st Jul (3 nights)",
              "cost": 129,
              "limit": 12
            },
            "fri28-wed2": {
              "display_name": "Fri 28th Jul - Thu 3rd Aug (6 nights)",
              "cost": 258,
              "limit": 36
            }
          },
          "message": [
            "We can issue refunds for accommodation if someone else can be ",
            "found to take your room, minus a €10 processing charge. Contact ",
            "guadec-organization@gnome.org if you need to discuss this."
          ]
        },
        "header-statistics": {
          "type": "documentation",
          "display_name": "",
          "html" : [
            "<h3>About you</h3>",
            "This section is optional and is used to help organise GUADEC ",
            "in future years. All information provided is anonymized and ",
            "will not be associated with you."
          ]
        },
        "country": {
          "display_name": "Country of residence",
          "short_display_name": "Country",
          "type": "country",
          "required": false,
          "default": "Unspecified",
          "options": ["Unspecified"],
          "placeholder": "",
          "private": true,
          "aggregate_only": true
        },
        "age": {
          "display_name": "Age",
          "short_display_name": "Age",
          "type": "string",
          "required": false,
          "default": "Unspecified",
          "placeholder": "",
          "private": true,
          "aggregate_only": true
        },
        "gender": {
          "display_name": "Gender identity",
          "short_display_name": "Gender",
          "type": "string",
          "required": false,
          "placeholder": "",
          "private": true,
          "aggregate_only": true
        },
        "source": {
          "display_name": "How did you hear about GUADEC?",
          "short_display_name": "Source",
          "type": "string",
          "required": false,
          "placeholder": "",
          "private": true
        },
        "doc2": {
          "type": "documentation",
          "display_name": "",
          "html" : "<hr style=\"margin: 0px 0px;\"/>"
        }
      },
      "payment_product_name": "GUADEC Registration Fee",
      "payment_sku_prefix": "guadec:",
      "currencies": {
        "GBP": {
          "symbol": "£",
          "default_amount": 30,
          "conversion_rate": 1
        },
        "EUR": {
          "symbol": "€",
          "default_amount": 40,
          "conversion_rate": 1.16
        }
      },
      "specific_amount": null,
      "main_currency": "GBP",
      "min_amount_for_receipt": 20,
      "paypal_experience_profile": "",
      "desk_word": "something",

      "paypal": {
        "api_credentials": {
          "mode": "live",
          "client_id": "",
          "client_secret": ""
        },

        "profile": {
          "name": "Event Registration Profile",
          "presentation": {
            "brand_name": "Event Foundation",
            "logo_image": "https://www.guadec.org/wp-content/uploads/2014/10/guadec-logo-white.png",
            "locale_code": "US"
          },
          "input_fields": {
            "allow_note": true,
            "no_shipping": 1,
            "address_override": 0
          },
          "flow_config": {
            "landing_page_type": "billing",
            "bank_txn_pending_url": "http://www.guadec.org"
          }
        }
      }
    }
  }
}
